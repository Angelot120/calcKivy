
mainWidget:


<mainWidget>:
    spacing: "3dp"
    orientation: 'vertical'
    BoxLayout:
        Label:
            id: calcLabel
            text: "0"
            font_size: 100
        Button:
            text: "CE"
            size_hint: .5, 1
            on_release: root.clear_button_clicked(self)
    calcButtons:

<calcButtons>:
    cols: 3
    spacing: "3dp"
    Button:
        id: firstButton
        text: "1"
        on_release: root.parent.button1Clicked(self)

    Button:
        id: "button2"
        text: "2"
        on_release: root.parent.button2Clicked(self)

    Button:
        text: "3"
        on_release: root.parent.button3Clicked(self)

    Button:
        text: "4"
        on_release: root.parent.button4Clicked(self)

    Button:
        text: "5"
        on_release: root.parent.button5Clicked(self)

    Button:
        text: "6"
        on_release: root.parent.button6Clicked(self)

    Button:
        text: "7"
        on_release: root.parent.button7Clicked(self)

    Button:
        text: "8"
        on_release: root.parent.button8Clicked(self)

    Button:
        text: "9"
        on_release: root.parent.button9Clicked(self)

    Button:
        text: "+"
        on_release: root.parent.buttonPlusClicked(self)

    Button:
        text: "0"
        on_release: root.parent.button0Clicked(self)

    Button:
        text: "-"
        on_release: root.parent.buttonMinusClicked(self)

    Button:
        text: "/"
        on_release: root.parent.buttonDivisionClicked(self)

    Button:
        text: "*"
        on_release: root.parent.buttonMultiplicationClicked(self)

    Button:
        text: "="
        on_release: root.parent.buttonEqualClicked(self)
